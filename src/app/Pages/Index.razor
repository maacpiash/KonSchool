@page "/"

<MudText Typo="Typo.h5" GutterBottom="true">Welcome to KonSchool app.</MudText>

<MudGrid>
	<MudItem xs="12" md="6" lg="6" xl="6">
		<MudLink Href="find" Typo="Typo.body2" Underline="Underline.None">
			<MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
				Search for a suitable school for a student
			</MudPaper>
		</MudLink>
	</MudItem>
	<MudItem xs="12" md="6" lg="6" xl="6">
		<MudLink Href="info" Typo="Typo.body2" Underline="Underline.None">
			<MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
				Look up information about a school
			</MudPaper>
		</MudLink>
	</MudItem>
</MudGrid>

@using KonSchool.Client.Components
@page "/"

@for (int i = 0; i < 5; i++)
{
    <Comparison
        Criterion1="@CriteriaList[i]"
        Criterion2="@CriteriaList[i + 1]"
        HandleValue="@(e => SetValue(i, e))"
    />
}

@code {
    public static string[] CriteriaList = new string[]
    {
        "Teacher-Student Ratio",
        "Male-Female Ratio",
        "Socio-Economic Status",
        "Location of School",
        "Age of School",
        "Average Age of Students"
    };

    public int[] Inputs { get; set; } = new int[6] { 0, 0, 0, 0, 0, 0 };

    public void SetValue(int index, int value)
    {
        System.Console.WriteLine($"{index}, {value}");
        Inputs[index] = value;
    }
}
